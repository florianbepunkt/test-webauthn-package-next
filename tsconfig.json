{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2018", "DOM"],
    "outDir": "lib",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "lib",
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx",
    "./src/setupTests.ts",
    "./src/**/__mocks__"
  ]
}
